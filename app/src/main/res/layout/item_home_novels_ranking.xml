<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/image_view_novels_ranking"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_launcher_background"
        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@color/grey"/>

    <ImageView
        android:id="@+id/heart_novel_ranking"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/likeheartwhite"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="200dp"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/text_view_novels_rankings_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:hint="title"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/text_view_novels_rankings_description"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint="description"
        android:layout_below="@id/text_view_novels_rankings_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/text_view_novels_rankings_user"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:hint="user"
        android:layout_marginTop="206dp"
        android:textColor="@color/white"
        />




</RelativeLayout>